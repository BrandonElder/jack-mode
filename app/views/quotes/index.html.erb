<div class="bgimg text-center">
  <div class="container">
    <% if flash[:error].present? %>
      <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 alert alert-danger">
        <%= flash[:error].html_safe %>
      </div>
    <% end %>
    <div class="align-items-center quotes">
      <h2>
        <span>Splurty / No. <%= @quote.id %>:</span>
      </h2>
      <h1 class="quote"><%= @quote.saying %></h1>
      <h2 class="pull-right">- <%= @quote.author %></h2>
    </div>
    <br class="clear" />
    <div class="btndiv">
      <%= link_to "Show me another...", root_path, class: 'next-quote btn btn-success' %>
    </div>  
  </div>
</div>

